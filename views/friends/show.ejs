<title> List of Friends </title>

<div class="row">
	<div class="col s6">
		<h3>People & Events:</h3>
		<% friends.forEach(function(friend){%>
		 	<ul>
		 		<li><b>Your friends:</b> <a href="/friend/<%=friend.id%>"><%=friend.friendname%></a></li>
		 		<li><b>Event:</b> <%=friend.event%></li>
		 		<li><b>Date:</b> <%=friend.date%></li>
		 		<li><b>Tags:</b> 
				 	<% friend.tags.forEach(function(t){ %>
						<span class="tags"><a href="/tag/<%=t.content%>">#<%= t.content %></a></span>
					<% }); %>	
				</li>
		 	</ul>
		 	<div class="col s3">
			 	<form method="GET" action="/friend/edit/<%=friend.id%>">
					<button class="btn waves-effect waves-light" type="submit" name="action">Edit
		    		<i class="material-icons right">edit</i>
		 			</button>
				</form>
			</div>
			<div class="col s3">
			 	<form method="POST" action="/friend/<%=friend.id%>/?_method=DELETE">
			 		<input type="hidden" name="userId" value="<%=user.id%>">
			 		<button class="btn waves-effect waves-light" type="submit" name="action">Delete
	    			<i class="material-icons right">delete</i>
	 				</button>
			 	</form>
			 </div>
		<%})%>
	</div>

	<div class="col s6">
		<h3>Add More Here!</h3>
		<div>
			<form method="POST" action="/friend">
				<input type="text" name="friendname" placeholder="Put your new friend's name here">
				<input type="text" name="event" placeholder="What event is this for? (i.e. birthday, anniversary">
				<input class="datepickerT" type="text" name="date" placeholder="Put date of the event!">
				<input type="text" name="tags" placeholder="Favorite things your friend likes! (comma-separated)">
				<input type="hidden" name="userId" value="<%=user.id%>">
				<button class="btn waves-effect waves-light" type="submit" name="action">Add More
	    		<i class="material-icons right">add</i>
	 			</button>
			</form>
		</div>
	</div>
</div>