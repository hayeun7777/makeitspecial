<div class="row">
<title>Edit Friends</title>
		<div class="col s6">
			<h3>Edit <%=friend.friendname%>'s Profile:</h3>
				<form method="POST" action="/friend/<%= friend.id %>/?_method=PUT">
					<ul>
						<li>Name:<input type="text" name="friendname" value="<%=friend.friendname%>"></li>
						<li>Event:<input type="text" name="event" value="<%=friend.event%>"></li>
						<li>Date:<input type="text" class="datepickerT" name="date" value="<%=friend.date%>"></li>
					</ul>
					<input type="submit" value="Done Editing!">
				</form>
		</div>

		<div class="col s6">
			<h3>Edit Tags:</h3>
				<ul>
					<form method="POST" action="/friend/edit/<%=friend.id%>">
						<input type="text" name="tags" placeholder="Add new tags (separated by comma)">
						<input type="submit" value="Add">
					</form>
					<% friend.tags.forEach(function(t){ %>
						<form method="POST" action="/tag/<%=t.id%>/?_method=DELETE"">
							<span class="tags"><a href="/tag/<%=t.id%>">#<%= t.content %></a>
							<input type="submit" class="tagDelete" value="✖️"></span>
						</form>
					<% }); %>
				</ul>	
		</div>
	</div>

</div>